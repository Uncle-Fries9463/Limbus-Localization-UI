<Window x:Name="Limbus_Localization_UI" x:Class="Limbus_Localization_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Limbus_Localization_UI"
        
        PreviewKeyDown="Limbus_Localization_UI_PreviewKeyDown"
        PreviewKeyUp="Limbus_Localization_UI_PreviewKeyUp"
        
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        Topmost="True"
        ResizeMode="CanResize"
        SizeChanged="Limbus_Json_to_Text_SizeChanged"
        
        MinHeight="320"
        MinWidth="600"
        MaxWidth="900"
        Width="900" 
        Height="443"
        
        Title="Limbus Localization UI">
    
    
    <Window.Resources>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF191919"/>
            <Setter Property="Foreground" Value="#EE2D2D"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="FontFamily" Value="Cascadia Mono SemiLight"/>
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Foreground" Value="#A69885"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#eebe2d"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#ffffff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExitButtons" TargetType="Button">
            <Setter Property="Background" Value="#FF191919"/>
            <Setter Property="Foreground" Value="#EE2D2D"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="FontFamily" Value="Cascadia Mono SemiLight"/>
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Foreground" Value="#A69885"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#646464"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CascadiaText" TargetType="Paragraph">
            <Setter Property="FontFamily" Value="Cascadia Mono SemiLight"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#eecea4"/>
        </Style>
    </Window.Resources>

    



    <Grid x:Name="Limbus_Json_Preview" Background="#0F0F0F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="590"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        
        <Border x:Name="OverrideCover1" Background="#A5000000" Grid.Row="1" Grid.Column="1" Panel.ZIndex="1" Focusable="False" Margin="1000"/>
        <Border x:Name="OverrideCover2" Background="#A5000000" Grid.Row="1" Grid.Column="0" Panel.ZIndex="1" Focusable="False" Margin="1000"/>
        
        <Border x:Name="ExitDialog"
                Margin="1000"
                
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Grid.Column="0"
                Width="360"
                Height="150"
                BorderThickness="2"
                BorderBrush="#FF333333"
                Background="#FF191919"
                Panel.ZIndex="1" >
            <StackPanel>
                <TextBlock x:Name="CloseEditor_Header"
                           HorizontalAlignment="Center"
                           Foreground="#eecea4"
                           Margin="0, 15, 0, 0"
                           FontSize="20"
                           FontFamily="Cascadia Mono SemiLight"
                           Text="Закрыть редактор?">
                    <TextBlock.RenderTransform>
                        <TranslateTransform X="0" Y="0"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <StackPanel Height="30">
                    <RichTextBox IsDocumentEnabled="True"
                                 BorderThickness="0"
                                 Background="{x:Null}"
                                 HorizontalAlignment="Center"
                                 Margin="0, 15, 0, 0"
                                 ToolTipService.InitialShowDelay="0">
                        <FlowDocument>
                            <Paragraph TextAlignment="Center" Foreground="#eecea4" FontSize="14" FontFamily="Cascadia Mono SemiLight">
                                <Run>
                                    Изменений не сохранено:
                                </Run>
                                <Run Foreground="AliceBlue" ToolTipService.InitialShowDelay="0" x:Name="UnsavedChangesCount">
                                    <Run.ToolTip>
                                        <ToolTip x:Name="UnsavedChangesTooltip"
                                                 Background="#895B5B5B"
                                                 BorderThickness="2"
                                                 HasDropShadow="False"
                                                 Placement="MousePoint"
                                                 Width="185"
                                                 Height="Auto"
                                                 HorizontalOffset="15"
                                                 VerticalOffset="10">
                                            <RichTextBox Background="{x:Null}" BorderThickness="0">
                                                <FlowDocument>
                                                    <Paragraph Style="{StaticResource CascadiaText}" FontSize="12" Foreground="#C3C3C3">
                                                        <Run x:Name="UnsavedChangesTooltip_Text" Text="newe\ns" BaselineAlignment="TextTop">
                                                        </Run>
                                                    </Paragraph>
                                                </FlowDocument>
                                            </RichTextBox>
                                        </ToolTip>
                                    </Run.ToolTip>
                                </Run>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 20, 0, 0" Height="40" Width="310">
                    <StackPanel Width="155">
                        <Button Click="Exit_Yes"
                                HorizontalAlignment="Left" 
                                Style="{StaticResource ExitButtons}"
                                Margin="3"
                                Width="150"
                                Height="35"
                                BorderThickness="4"
                                Content="Да">
                        
                    </Button>
                    </StackPanel>
                    <StackPanel Width="155">
                        <Button Click="Exit_No"
                                HorizontalAlignment="Right" 
                                Style="{StaticResource ExitButtons}"
                                Margin="3"
                                Width="150"
                                Height="35"
                                BorderThickness="4"
                                Content="Нет">
                        </Button>
                    </StackPanel>
                    
                </StackPanel>
            </StackPanel>
            <Border.RenderTransform>
                <TranslateTransform X="300" Y="0" />
            </Border.RenderTransform>
        </Border>
        
        
        
        
        <TextBox x:Name="InputJson"
                 BorderThickness="0"
                 TextChanged="TextChanged"
                 TextWrapping="Wrap"
                 Grid.Row="0"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Width="580"
                 Height="133"
                 Margin="5"
