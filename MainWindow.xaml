                                 Width="239"
                                 Height="27"
              
                                 TextAlignment="Left"
             
                                 BorderThickness="0"
             
                                 Foreground="#A69885"
                                 Background="#E9191919"
             
                                 SelectionBrush="#FF939393"
                                 SelectionTextBrush="#A69885"
                                 CaretBrush="#A69885"
                   
                                 FontFamily="Cascadia Mono SemiLight"
                                 FontSize="19"/>
                    </Border>

                    <Label x:Name="EgoGift_JumpToID_bgtext"
                           FontStyle="Italic"
                           Grid.Column="1" 
