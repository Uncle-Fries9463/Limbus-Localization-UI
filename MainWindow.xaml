                        VerticalAlignment="Center">
                        <RichTextBox Background="{x:Null}"
                                     IsReadOnly="True"
                                     Focusable="False"
                                     BorderThickness="0">
                            <FlowDocument>
                                <Paragraph TextAlignment="Center">
                                    <Run x:Name="EgoGift_Name_Show"
                                         Text="Название"
                                         FontFamily="./#Mikodacs"
                                         Foreground="#eecea4"
                                         FontSize="20.5">
                                    </Run>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </ScrollViewer>
                </Border>


                <StackPanel Orientation="Horizontal" Height="42" Margin="0, 6, 0, 0">
                    <Border Height="29"
                            Width="241"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderThickness="2"
                            BorderBrush="#FF333333">
                        <TextBox x:Name="EgoGift_JumpToID_Input"
                                 Grid.Column="1" 
                                 Grid.Row="1" 
                                 Margin="0, 0, 0, 0"
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Left"
