                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Border x:Name="EgoGift_SimpleDesc1_Cover"
                                Grid.Column="1"
                                Grid.Row="2"
                                Background="#7F000000"
                                Margin="0, -30, 0, 0"
                                Width="232.5"
                                Height="30"
                                Focusable="False"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"/>
                        
                        <Button x:Name="EgoGift_SwitchEditorTo_SimpleDesc2"
                                Click="EgoGift_SwitchEditorTo_SimpleDesc2_Button"
