            <Border Grid.Column="1" 
                    Grid.Row="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="276"
                    BorderBrush="#FF4B4B4B" 
                    BorderThickness="2" 
                    CornerRadius="3">
                
                <ScrollViewer Margin="3, 35, 0, 0" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <Button x:Name="EgoGift_SwitchEditorTo_Desc"
                                Click="EgoGift_SwitchEditorTo_Desc_Button"
                                Content="Описание"
                                Grid.Column="1"
                                Grid.Row="2"
                                Margin="0, 0, 0, 0"
