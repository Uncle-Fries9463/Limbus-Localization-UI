                    Width="70"
                    Height="16"
                    Margin="204, 39, 0, 0"
                    BorderThickness="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Stretch"/>

            

            <Border Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="115"
                    Height="16"
                    Background="#FF191919"
                    BorderThickness="1"
                    Margin="80, 39, 0, 0"
                    BorderBrush="#FF333333">
                <Button x:Name="EgoGift_ID_CopyID_Button"
