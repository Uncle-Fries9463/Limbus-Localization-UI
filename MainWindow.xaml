<Window x:Name="Limbus_Localization_UI" x:Class="Limbus_Localization_UI.MainWindow"
	    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	    xmlns:local="clr-namespace:Limbus_Localization_UI"
	    xmlns:sys="clr-namespace:System;assembly=mscorlib"
        
                
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" 
        
        
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewKeyUp="Window_PreviewKeyUp"
        Closing="Window_Closing"
        Topmost="True"
        ResizeMode="CanResize"
        SizeChanged="Window_SizeChanged"
        
        MinHeight="320"
        MinWidth="600"
        MaxWidth="895"
        Width="895"
        Height="440"
        
        Opacity="1" AllowsTransparency="True"
        
        Title="Limbus Localization UI">
    <!--Плавное появление окна и анти флешбенг при WindowStyle="None"-->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard Name="FormFade">
                    <DoubleAnimation  Name="FormFadeAnimation"
                                      Storyboard.TargetProperty="(Window.Opacity)"
                                      SpeedRatio="4.86"
                                      From="0.0" To="1.0" Duration="0:0:0:01"
                                      AutoReverse="False" RepeatBehavior="1x"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Window.Resources>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="#FF191919"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="Foreground" Value="#ebcaa2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.Resources>
                                <Style x:Key="ToggleButtonStyle1" TargetType="{x:Type ToggleButton}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Border x:Name="border" Background="#FF191919" BorderBrush="#FF333333" BorderThickness="3" SnapsToDevicePixels="True">
                                                    <ContentPresenter x:Name="contentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="true">
                                                        <Setter Property="BorderBrush" TargetName="border" Value="#eebe2d"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Grid.Resources>
                            <ToggleButton x:Name="SelectedJsonEditorFont"
                                            Grid.Column="2"
                                            Focusable="False"
                                            Foreground="#ebcaa2"
                                            Style="{StaticResource ToggleButtonStyle1}"
                                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type ComboBox}}}"
                                            BorderThickness="4"
                                            BorderBrush="#FF333333"
                                            Background="#FF191919"
                                            ClickMode="Press">
                                <ContentPresenter/>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}" 
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                              Margin="9,3,23,3"
                                              Width="63"
                                              VerticalAlignment="Center" 
                                              HorizontalAlignment="Left"
                                              Panel.ZIndex="1000"/>
                            <Popup Name="Popup"
                                   Placement="Bottom" 
                                   AllowsTransparency="True" 
                                   Focusable="False"
                                   IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   PopupAnimation="Fade" Width="95.5">
                                <Border BorderThickness="2" 
                                        BorderBrush="#FF333333">
                                    <Grid Name="DropDown" 
                                          Background="#FF191919">
                                        <ScrollViewer Margin="0,6,4,6" SnapsToDevicePixels="True" MaxHeight="160" HorizontalScrollBarVisibility="Disabled" FontSize="11">
                                            <ItemsPresenter Margin="3, 0, 0, 0" />
                                            <ScrollViewer.Resources>
                                                <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">0</sys:Double>
                                            </ScrollViewer.Resources>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFD1D1D1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF191919"/>
            <Setter Property="Foreground" Value="#EE2D2D"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Foreground" Value="#A69885"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#eebe2d"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#ffffff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ExitButtons" TargetType="Button">
            <Setter Property="Background" Value="#FF191919"/>
            <Setter Property="Foreground" Value="#EE2D2D"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Foreground" Value="#A69885"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#646464"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CascadiaText" TargetType="Paragraph">
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#ebcaa2"/>
        </Style>
        <Style x:Key="Skill_MainDescriptoin" TargetType="RichTextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="#ebcaa2"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Cursor" Value="Pen"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Margin" Value="0, 15, 0, 0"/>
        </Style>
        <Style x:Key="Skill_CoinDescriptoin" TargetType="RichTextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="#ebcaa2"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Cursor" Value="Pen"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Margin" Value="7, 15, 0, 0"/>
            <Setter Property="Width" Value="578"/>
        </Style>
        <Style x:Key="Skill_CoinIcon" TargetType="Border">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style x:Key="Skill_CoinPanel" TargetType="Border">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome
        CaptionHeight="1"
        CornerRadius="10"
        GlassFrameThickness="1"/>
    </WindowChrome.WindowChrome>
    <Window.Clip>
        <RectangleGeometry x:Name="NewWindowSizes" Rect="0, 0, 890, 440" RadiusX="5" RadiusY="5"/>
    </Window.Clip>
    <Border BorderBrush="Gray" BorderThickness="0.5" Canvas.ZIndex="200">
        <Grid x:Name="Overall" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border x:Name="Title" >
                <Grid Grid.Row="0" Background="#FF141414">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition x:Name="TitleBarIcons" Width="270"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 1, 1, 0">
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                            <Button x:Name="Refractor1" Click="Refractor1_Click" Height="25" Width="0" Margin="5, 0, 0, 0" Foreground="#FFD1D1D1">
                                <TextBlock x:Name="LinksToStyle" Foreground="#FFD1D1D1" FontSize="13" Width="106" TextWrapping="Wrap" TextAlignment="Center" Margin="-1, 0, 0, 0" Text="">
                                    Ссылки ➤ sprite
                                </TextBlock>
                            </Button>
                        </StackPanel>
                        <Button x:Name="Refractor" Click="Refractor_Click" MouseEnter="Refractor_MouseEnter" MouseLeave="Refractor_MouseLeave" Width="30" Background="#FF191919" BorderThickness="0">
                            <Image Width="18" Source="pack://application:,,,/Images/Interface/replace.png"/>
                            <Button.ToolTip>
                                <ToolTip Background="#CC5B5B5B"
                                         BorderThickness="2"
                                         HasDropShadow="False"
                                         Placement="MousePoint"
                                         Height="Auto"
                                         Width="105"
                                         HorizontalOffset="15"
                                         VerticalOffset="10">
                                    <RichTextBox Background="{x:Null}" BorderThickness="0">
                                        <FlowDocument>
                                            <Paragraph Style="{StaticResource CascadiaText}" FontSize="12" Foreground="#C3C3C3">
                                                <Run Text="Рефракторинг" BaselineAlignment="TextTop"/>
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                        <Button x:Name="Settings" Click="Settings_Click" MouseEnter="Settings_MouseEnter" MouseLeave="Settings_MouseLeave" Width="30" Background="#FF191919" BorderThickness="0">
                            <Image Width="13" Source="pack://application:,,,/Images/Interface/settings.png"/>
                            <Button.ToolTip>
                                <ToolTip Background="#CC5B5B5B"
                                         BorderThickness="2"
                                         HasDropShadow="False"
                                         Placement="MousePoint"
                                         Height="Auto"
                                         Width="105"
                                         HorizontalOffset="15"
                                         VerticalOffset="10">
                                    <RichTextBox Background="{x:Null}" BorderThickness="0">
                                        <FlowDocument>
                                            <Paragraph Style="{StaticResource CascadiaText}" FontSize="12" Foreground="#C3C3C3">
                                                <Run Text="Настройки" BaselineAlignment="TextTop"/>
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                        <Button x:Name="Minimize" Click="Minimize_Click" MouseEnter="Minimize_MouseEnter" MouseLeave="Minimize_MouseLeave" Width="30" Background="#FF191919" BorderThickness="0">
                            <TextBlock FontSize="25" Margin="0, -8.4, 0, 0">_</TextBlock>
                        </Button>
                        <Button x:Name="WindowMode" Click="WindowMode_Click" MouseEnter="WindowMode_MouseEnter" MouseLeave="WindowMode_MouseLeave" Width="30"  Background="#FF191919" BorderThickness="0" FontSize="18">
                            <TextBlock Margin="0, 0, 0, 0">❏</TextBlock>
                        </Button>
                        <Button x:Name="Close" Click="Close_Click" MouseEnter="Close_MouseEnter" MouseLeave="Close_MouseLeave" Width="30" Background="#FF191919" BorderThickness="0" FontSize="25">
                            <TextBlock Margin="0, -2, 0, 0">⤬</TextBlock>
                        </Button>
                    </StackPanel>
                    <Border Grid.Row="0" HorizontalAlignment="Left" Width="30" CornerRadius="5.5" BorderBrush="#FF616161" BorderThickness="1" Margin="-1">
                        <Border.Clip>
                            <RectangleGeometry Rect="0, 0, 10, 10" RadiusX="5" RadiusY="5"/>
                        </Border.Clip>
                    </Border>
                    <Border Grid.Column="1" HorizontalAlignment="Right" Width="30" CornerRadius="5.5" BorderBrush="#FF616161" BorderThickness="1" Margin="0, -1, -31, 0">
                        <Border.Clip>
                            <RectangleGeometry Rect="0, 0, 10, 10" RadiusX="5" RadiusY="5"/>
                        </Border.Clip>
                        <Border.RenderTransform>
                            <ScaleTransform ScaleX="-1" />
                        </Border.RenderTransform>
                    </Border>
                    <TextBlock Grid.Row="0" FontFamily="Bahnschrift Light" Foreground="#FF1D1D1D" FontSize="20" Width="30" HorizontalAlignment="Left" Margin="2, 5, 0, 0" TextAlignment="Center">
                        ❐
                    </TextBlock>
                    <TextBlock Grid.Row="0" FontFamily="Bahnschrift Light" Foreground="#FF232323" FontSize="25" Width="320" HorizontalAlignment="Left" Margin="35, 0, 0, 0">
                        Limbus Localization UI v1.5
                    </TextBlock>
                    <TextBlock Grid.Row="0" FontFamily="Bahnschrift Light" Foreground="#4C161616" FontSize="25" Width="388" Margin="355, 0, 0, 0">фывщхзьй2щвйцвсйцшывхцхххххх</TextBlock>
                </Grid>
            </Border>
            <Border Grid.Row="1" CornerRadius="50">
                <Grid x:Name="Limbus_Json_Preview" Background="#0F0F0F" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="1"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="JsonIO_Column" Width="590"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="2" HorizontalAlignment="Right" Width="30" Height="30" VerticalAlignment="Bottom" CornerRadius="5.5" BorderBrush="#FF616161" BorderThickness="1" Margin="0, 0, -1, -2">
                        <Border.Clip>
                            <RectangleGeometry Rect="20, 20, 30, 30" RadiusX="5" RadiusY="5"/>
                        </Border.Clip>
                        <Border.RenderTransform>
                            <ScaleTransform />
                        </Border.RenderTransform>
                    </Border>
                    <Border Grid.Column="0" HorizontalAlignment="Left" Width="30" Height="30" VerticalAlignment="Bottom" CornerRadius="5.5" BorderBrush="#FF616161" BorderThickness="1" Margin="-1, 0, 0, -2">
                        <Border.Clip>
                            <RectangleGeometry Rect="0, 20, 10, 20" RadiusX="5" RadiusY="5"/>
                        </Border.Clip>
                        <Border.RenderTransform>
                            <ScaleTransform />
                        </Border.RenderTransform>
                    </Border>
                    <Border x:Name="OverrideCover1" Background="#A5000000" Grid.Row="0" Grid.Column="1" Panel.ZIndex="1" Focusable="False" Margin="1000"/>
                    <Border x:Name="OverrideCover2" Background="#A5000000" Grid.Row="0" Grid.Column="0" Panel.ZIndex="1" Focusable="False" Margin="1000"/>
                    <Border x:Name="SettingsDialog"
                            Margin="1000"
                            Background="#FF191919"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Grid.Column="0"
                            Width="460"
                            Height="355"
                            BorderThickness="2"
                            BorderBrush="#FF333333"
                            Panel.ZIndex="1">
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Center"
                                       Foreground="#FFD1D1D1"
                                       Margin="0, 8, 0, 0"
                                       FontSize="30"
                                       FontFamily="Bahnschrift Light"
                                       Text="Настройки">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform X="0" Y="0"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <StackPanel Margin="10, -6, 0, 0">
                                <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal">
                                    <TextBlock Foreground="#FFB4B4B4" FontSize="22" FontFamily="Bahnschrift Light">
                                        ※
                                    </TextBlock>
                                    <StackPanel>
                                        <StackPanel Width="290">
                                            <TextBlock Foreground="#FFB4B4B4" FontSize="22" FontFamily="Bahnschrift Light">
                                                Подсвечивать улучшения
                                            </TextBlock>
                                            <TextBlock FontFamily="Bahnschrift Light" HorizontalAlignment="Left" FontSize="13" Width="290" Foreground="#FF6F6F6F" TextWrapping="Wrap">
                                                <TextBlock.Text>
                                                    Подсвечивать &lt;style&gt; как цвет (Обновите предпросмотр текстовыми данными)
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                    <Button x:Name="ToggleHighlight" Click="ToggleHighlight_Click" Margin="25, 0, 0, 0" Foreground="#FFB4B4B4" BorderThickness="3" FontSize="28" Height="40" Width="95">
                                        <TextBlock x:Name="ToggleHighlight_Text" Margin="0, -1, 0, 0" Text="Да" FontFamily="Lucida Console"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal">
                                    <TextBlock Foreground="#FFB4B4B4" FontSize="22" FontFamily="Bahnschrift Light">
                                        ※
                                    </TextBlock>
                                    <StackPanel>
                                        <StackPanel Width="290">
                                            <TextBlock Foreground="#FFB4B4B4" FontSize="22" FontFamily="Bahnschrift Light">
                                                Шрифт json редактора
                                            </TextBlock>
                                            <TextBlock FontFamily="Bahnschrift Light" HorizontalAlignment="Left" FontSize="13" Width="290" Foreground="#FF6F6F6F" TextWrapping="Wrap">
                                                <TextBlock.Text>
                                                    Шрифт поля редактирования текущего Json элемента
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                    <ComboBox x:Name="FontSelector" SelectionChanged="FontSelector_SelectionChanged" Margin="25, 0, 0, 0" Height="40" Width="95">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Text}" FontFamily="{Binding FontFamily}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Border Height="34" Width="89" Margin="-95, 0, 0, 0" IsHitTestVisible="False" Background="#FF191919">
                                        <Label x:Name="FontLabel" Foreground="#FFB4B4B4" FontSize="14" VerticalAlignment="Center" FontFamily="Lucida Sans Unicode">Lucida Sans Unicode</Label>
                                    </Border>
                                </StackPanel>
                                <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal">
                                    <TextBlock Foreground="#FFB4B4B4" FontSize="22" FontFamily="Bahnschrift Light">
        ※
                                    </TextBlock>
                                    <StackPanel>
                                        <StackPanel Width="290">
                                            <TextBlock Foreground="#FFB4B4B4" FontSize="22" FontFamily="Bahnschrift Light">
                                                Цвет json редактора
                                            </TextBlock>
                                            <TextBlock FontFamily="Bahnschrift Light" HorizontalAlignment="Left" FontSize="13" Width="290" Foreground="#FF6F6F6F" TextWrapping="Wrap">
                                                <TextBlock.Text>
                                                    Цвет текста поля редактирования текущего Json элемента (В hex RGB формате)
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                    <Border Margin="25, 0, 0, 0" Height="40" Width="95" BorderThickness="3" BorderBrush="#FF333333">
                                        <TextBox x:Name="JsonEditor_ColorSelector"
                                                 Margin="0, -1, 0, 0"
                                                 TextChanged="JsonEditor_ColorSelector_TextChanged"
                                                 FontSize="22"
                                                 Height="30"
                                                 FontFamily="Consolas"
                                                 MaxLength="7"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 Background="#FF191919"
                                                 BorderThickness="0"
                                                 Foreground="#FFB4B4B4"
                                                 SelectionBrush="#B2B4B4B4">
                                            #A69885
                                        </TextBox>
                                    </Border>
                                </StackPanel>
                                <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal">
                                    <TextBlock Foreground="#FFB4B4B4" FontSize="22" FontFamily="Bahnschrift Light">
                                        ※
                                    </TextBlock>
                                    <StackPanel>
                                        <StackPanel Width="290">
                                            <TextBlock Foreground="#FFB4B4B4" FontSize="22" FontFamily="Bahnschrift Light">
                                                Язык программы
                                            </TextBlock>
                                            <TextBlock FontFamily="Bahnschrift Light" HorizontalAlignment="Left" FontSize="13" Width="290" Foreground="#FF6F6F6F" TextWrapping="Wrap">
                                                <TextBlock.Text>
                                                    Таких обстоятельств на данный момент ещё не произошло
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                    <Button x:Name="Lang" Margin="25, 0, 0, 0" Foreground="#FFB4B4B4" BorderThickness="3" BorderBrush="#FF5E5E5E" FontSize="28" Height="40" Width="95">
                                        <TextBlock Margin="0, 0, 0, 0" Text="RU"/>
                                    </Button>
                                    <Border  Margin="-95, 0, 0, 0" Height="40" Width="95" Background="#7F000000"/>
                                </StackPanel>
                                <Button Click="Settings_OK" Width="100" Height="35" Margin="0, 0, 0, 0" Content="OK"></Button>
                            </StackPanel>
                        </StackPanel>
                        <Border.RenderTransform>
                            <TranslateTransform X="250" Y="-10" />
                        </Border.RenderTransform>
                    </Border>
                    <Border x:Name="ExitDialog"
                            Margin="1000"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Grid.Column="0"
                            Width="360"
                            Height="150"
                            BorderThickness="2"
                            BorderBrush="#FF333333"
                            Background="#FF191919"
                            Panel.ZIndex="1" >
                        <StackPanel>
                            <TextBlock x:Name="CloseEditor_Header"
                                       HorizontalAlignment="Center"
                                       Foreground="#ebcaa2"
                                       Margin="0, 15, 0, 0"
                                       FontSize="20"
                                       FontFamily="Bahnschrift Light"
                                       Text="Закрыть редактор?">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform X="0" Y="0"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <StackPanel Height="30">
                                <RichTextBox IsDocumentEnabled="True"
                                             BorderThickness="0"
                                             Background="{x:Null}"
                                             HorizontalAlignment="Center"
                                             Margin="0, 15, 0, 0"
                                             ToolTipService.InitialShowDelay="0">
                                    <FlowDocument>
                                        <Paragraph TextAlignment="Center" Foreground="#ebcaa2" FontSize="14" FontFamily="Bahnschrift Light">
                                            <Run>
                                                Изменений не сохранено:
                                            </Run>
                                            <Run Foreground="AliceBlue" ToolTipService.InitialShowDelay="0" x:Name="UnsavedChangesCount">
                                                <Run.ToolTip>
                                                    <ToolTip x:Name="UnsavedChangesTooltip"
                                                             Background="#895B5B5B"
                                                             BorderThickness="2"
                                                             HasDropShadow="False"
                                                             Placement="MousePoint"
                                                             Width="185"
                                                             Height="Auto"
                                                             HorizontalOffset="15"
                                                             VerticalOffset="10">
                                                        <RichTextBox Background="{x:Null}" BorderThickness="0">
